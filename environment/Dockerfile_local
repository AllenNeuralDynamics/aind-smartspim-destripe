    PyWavelets==1.6.0 \
    tqdm==4.66.5 \
    pathlib2 \
    aind-data-schema==1.0.0 \
    matplotlib==3.9.2 \
    psutil==6.0.0 \
    BaSiCPy==1.1.0 \
    natsort==8.4.0 \
    imageio==2.35.1 \
    xarray_multiscale==2.1.0
